// functions/get-news.js

exports.handler = async (event, context) => {
  const API_KEY = process.env.NEWS_API_KEY;
  const keywords = ['농업', '농촌', '귀농귀촌', '농부', '농업창업', '스마트팜', '스마트농업', '농식품', '건강식품', '창농'];
  const query = keywords.join(' OR ');
  const url = `https://newsapi.org/v2/everything?q=${encodeURIComponent(query)}&language=ko&sortBy=publishedAt&apiKey=${API_KEY}`;

  try {
    const fetch = (await import('node-fetch')).default;
    const response = await fetch(url);
    const data = await response.json();

    return {
      statusCode: 200,
      body: JSON.stringify(data.articles),
    };
  } catch (error) {
    return {
      statusCode: 500,
      body: JSON.stringify({ error: '뉴스를 가져오는 데 실패했습니다.' }),
    };
  }
};